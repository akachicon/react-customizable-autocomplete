{
  "include": [
    "declarations/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "references": [],
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": [
        "src/client/*"
      ],
      "@app/*": [
        "src/client/app/*"
      ],
      "@lib/*": [
        "src/client/app/lib/*"
      ],
      "@constants/*": [
        "src/client/app/constants/*"
      ],
      "@styles/*": [
        "src/client/assets/styles/*"
      ],
      "@fonts/*": [
        "src/client/assets/fonts/*"
      ],
      "@images/*": [
        "src/client/assets/images/*"
      ]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "../../node_modules/.cache/ts-build-info/app"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
