{
  "include": ["examples/**/*.ts", "examples/**/*.tsx", "examples/**/*.json"],
  "compilerOptions": {
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "react-customizable-autocomplete": ["lib"],
      "react-customizable-autocomplete/*": ["lib/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
